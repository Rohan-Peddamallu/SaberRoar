// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  stackId   String   @unique // StackFrame Stack user ID
  email     String   @unique
  name      String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile           UserProfile?
  equipmentRequests EquipmentRequest[]
  footageUploads    FootageUpload[]

  @@map("users")
}

model UserProfile {
  id       String  @id @default(cuid())
  userId   String  @unique
  bio      String?
  location String?
  website  String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_profiles")
}

model EquipmentRequest {
  id          String   @id @default(cuid())
  userId      String
  equipment   String   // Equipment type (camera-kit, microphone-set, etc.)
  description String   // Project description
  status      String   @default("pending") // pending, approved, denied, returned
  requestDate DateTime @default(now())
  dueDate     DateTime?
  notes       String?  // Teacher notes
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("equipment_requests")
}

model FootageUpload {
  id          String   @id @default(cuid())
  userId      String
  fileName    String
  fileSize    Int      // Size in bytes
  fileType    String   // MIME type
  filePath    String   // Path to stored file
  title       String?  // Optional title
  description String?  // Optional description
  uploadDate  DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("footage_uploads")
}
